@model OnlineMuseum.Models.VehicleCategory
@{
    ViewBag.Title = "NewCategory";
}

<h2>Add new category</h2>


@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <div class="form-group">
                @Html.TextBoxFor(item => item.Name, new { placeholder = "Name of the category", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(item => item.ImageUrl, new { placeholder = "Image url", @Value = "", @class = "form-control" })
            </div>
           
            <div class="btn-group">
                <div class="btn-group">
                    <input type="submit" value="Save" class="btn btn-success btn-lg " />
                </div>
                <div class="btn-group">
                    @Html.ActionLink("Back", "BackToHomePage", null, new { @class = "btn btn-warning btn-lg" })
                </div>
            </div>
        </div>
    </div>
}