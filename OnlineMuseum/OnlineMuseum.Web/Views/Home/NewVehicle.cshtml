@model OnlineMuseum.Models.VehicleModelPoco
@{
    ViewBag.Title = "NewVehicle";
}

<h2>Add new vehicle</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <div class="form-group">
                @Html.TextBoxFor(item => item.Name, new { placeholder = "Name", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(item => item.YearOfProduction, new { placeholder = "Year of production", @Value = "", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(item => item.Description, new { placeholder = "Description", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(item => item.FunFacts, new { placeholder = "Fun facts", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(item => item.ImageUrlOfThePast, new { placeholder = "Image of the past", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(item => item.ImageUrlOfThePresent, new { placeholder = "Image of the present", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(item => item.VehicleCategoryId, (SelectList)ViewBag.VehicleCategories, "Select category of the vehicle", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(item => item.VehicleMakerId, (SelectList)ViewBag.MakerCategories, "Select maker", new { @class = "form-control" })
            </div>
        <div class="row">
              <input type="submit" value="Save" class="btn btn-success btn-lg btn-block " />
              @Html.ActionLink("Back", "BackToHomePage", null, new { @class = "btn btn-default btn-lg btn-block" })
        </div>
    </div>
</div>
}